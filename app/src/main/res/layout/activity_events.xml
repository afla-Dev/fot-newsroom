<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOT News Room"
                android:textSize="24sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Choose a Category"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:weightSum="3"
                android:paddingHorizontal="16dp">

                <!-- Sports Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <Button
                        android:id="@+id/sportsButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/category_button_background"
                        android:drawableTop="@drawable/baseline_sports_volleyball_24"
                        android:drawablePadding="4dp"
                        android:text=""
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Academic Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <Button
                        android:id="@+id/academicButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/category_button_background"
                        android:drawableTop="@drawable/baseline_library_books_24"
                        android:drawablePadding="4dp"
                        android:text=""
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Academic"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Events Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <Button
                        android:id="@+id/eventsButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/category_button_background"
                        android:drawableTop="@drawable/baseline_event_24"
                        android:drawablePadding="4dp"
                        android:text=""
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginVertical="24dp"/>

            <!-- Sports Content -->
            <!-- Events Content Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Annual General Meeting 2025"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Jun 12-14"
                android:textSize="18sp"
                android:textColor="@color/Purple"
                android:layout_marginBottom="16dp"/>

            <!-- Main Image -->
            <ImageView
                android:id="@+id/eventsMainImage"
                android:layout_width="380dp"
                android:layout_height="250dp"
                android:gravity="center"
                android:src="@drawable/event"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:contentDescription="Tech festival image"/>

            <!-- Content Sections -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENVIRONMENTAL TECHNOLOGY SOCIETY"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience cutting-edge technology demonstrations, hands-on workshops, and keynote speeches from industry leaders. Open to all students and faculty members."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Call to Action -->
            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Register Now"
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>