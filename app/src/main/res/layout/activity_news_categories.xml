<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOT News Room"
                android:textSize="24sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Categories Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Choose a Category"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:weightSum="3"
                android:paddingHorizontal="16dp">

                <!-- Sports Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <Button
                        android:id="@+id/sportsButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/category_button_background"
                        android:drawableTop="@drawable/baseline_sports_volleyball_24"
                        android:drawablePadding="4dp"
                        android:text=""
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Academic Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <Button
                        android:id="@+id/academicButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/category_button_background"
                        android:drawableTop="@drawable/baseline_library_books_24"
                        android:drawablePadding="4dp"
                        android:text=""
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Academic"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Events Category -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <Button
                        android:id="@+id/eventsButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/category_button_background"
                        android:drawableTop="@drawable/baseline_event_24"
                        android:drawablePadding="4dp"
                        android:text=""
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginVertical="24dp"/>

            <!-- Sports Content -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Sports"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Inter-Faculty Sports 2025"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:text="May 05"
                android:textSize="18sp"
                android:textColor="@color/Purple"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="380dp"
                android:layout_height="250dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sport"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="INTER-FACULTY CHAMPIONSHIP'25"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="The stadium is alive, the crowd is roaring, and our athletes are ready to break limits! From lightning-fast sprints to powerful throws and gravity-defying jumps â€“ today promises action like never before."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Those wishing to play interfaculty must fill out the Google form below. Before filling out the form, read the caption carefully."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"/>

            <!-- More Details Button -->
            <Button
                android:id="@+id/moreDetailsButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="More Details."
                android:textSize="12sp"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"/>
</RelativeLayout>